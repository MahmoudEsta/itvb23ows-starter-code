pipeline {
    agent {label '!windows'}
    stages {
        stage('build') {
            steps {
                sh 'echo "Testing"'
            }
        }
        stage('SonarQube') {
             steps {
                 script { scannerHome = tool 'HiveGame SonarQube Scanner' }
                 withSonarQubeEnv('HiveGame SonarQube Scanner') {
                     sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=HiveGame"
                 }
             }
        }

    }
}
